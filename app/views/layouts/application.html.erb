<!DOCTYPE html>
<html>
<head>
  <title>Note app</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <nav>
    <ul>
      <li><<%= link_to "ノート", blogs_path %></li>
      <li><<%= link_to "辞書", blogs_path %></li>
      <li><a href="" class="nav__item"></a></li>
      <li><a href="" class="nav__item"></a></li>
      <% if user_signed_in? %>
       <li><%= link_to 'マイページ', edit_user_registration_path %></li>
       <li><%= link_to 'ユーザー一覧', users_path if user_signed_in? %></li>
       <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
      <% else %>
       <li><%= link_to 'ログイン', new_user_session_path %></li>
       <li><%= link_to 'サインアップ', new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
<%= yield %>

</body>
</html>
